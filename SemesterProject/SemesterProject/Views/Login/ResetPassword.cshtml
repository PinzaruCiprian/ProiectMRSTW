
@{
     Layout = "~/Views/Shared/_LayoutSimple.cshtml";
     ViewBag.Title = "ResetPassword";
}
@model SemesterProject.Model.UserResetPassword

<div class="account-pages mt-5 mb-5">
     <div class="container">
          <div class="row justify-content-center">
               <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                         <div class="card-body p-4">
                              <div class="text-center w-75 m-auto">
                                   <a href="index.html">
                                        <span><img src="~/assets/images/logo-dark.png" alt="" height="22"></span>
                                   </a>
                                   <p class="text-muted mb-4 mt-3">Enter your new password.</p>
                              </div>
                              @Html.ValidationSummary(true)
                              @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { @id = "LoginForm" }))
                              {
                                   @Html.AntiForgeryToken()
                         <form action="/" novalidate id="LoginForm" method="post">


                              <div class="form-group mb-3">
                                   @Html.LabelFor(m => m.Password, new { @class = "password" })
                                   @Html.TextBoxFor(m => m.Password, new
                              {
                                   placeholder = "password",
                                   title = "Enter your password",
                                   value = "",
                                   name = "password",
                                   id = "password",
                                   @class = "form-control"
                              })
                              </div>

                              <div class="form-group mb-3">
                                   @Html.LabelFor(m => m.ConfirmPassword, new { @class = "password" })
                                   @Html.TextBoxFor(m => m.ConfirmPassword, new
                              {
                                   placeholder = "confirm password",
                                   title = "Enter your password",
                                   value = "",
                                   name = "password",
                                   id = "password",
                                   @class = "form-control"
                              })
                              </div>

                              <div class="form-group mb-0 text-center">
                                   <button type="submit" class="btn btn-primary btn-block" href="/Home/Index"> Reset Password </button>
                              </div>

                         </form>
                              }

                         </div>
                    </div>
                    <div class="row mt-3">
                         <div class="col-12 text-center">
                              <p class="text-muted">Back to <a href="/Login/Login" class="text-primary font-weight-medium ml-1">Log In</a></p>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>