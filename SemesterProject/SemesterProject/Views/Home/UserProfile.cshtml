@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     var user = ViewBag.user;
     ViewBag.Title = "UserProfile";
}
@model SemesterProject.Model.EditUser

<div class="row">
     <div class="col-lg-4 col-xl-4">
          <div class="card-box text-center">
               <img src="@Url.Content("~/assets/images/users/" + user.Image)" class="rounded-circle avatar-xl img-thumbnail"
                    alt="profile">
               <h4 class="mb-0">&#64;@user.Username</h4>

               <div class="text-left mt-3">
                    <p class="text-dark mb-3 font-14"><strong>Full Name:</strong> <span class="text-muted ml-2">@user.FirstName @user.LastName</span></p>
                    <p class="text-dark mb-3 font-14"><strong>Email:</strong> <span class="text-muted ml-2">@user.Email</span></p>
                    <p class="text-dark mb-3 font-14"><strong>Address:</strong> <span class="text-muted ml-2">@user.Address</span></p>
                    <p class="text-dark mb-3 font-14"><strong>Phone Number:</strong> <span class="text-muted ml-2">@user.Phone</span></p>
                    <p class="text-dark mb-3 font-14"><strong>Birth Date:</strong> <span class="text-muted ml-2">@user.BirthDate.Date.ToString("MM/dd/yyyy")</span></p>
               </div>
          </div>
     </div>

     <div class="col-lg-8 col-xl-8">
          <div class="card-box">
               <div class="tab-content">
                    <div class="tab-pane show active" id="settings">
                         @Html.ValidationSummary(true)
                         @using (Html.BeginForm("UserProfile", "Home", FormMethod.Post, new { @id = "EditUserForm", enctype = "multipart/form-data" }))
                         {
                              @Html.AntiForgeryToken()
                              <form class="needs-validation" novalidate>
                                   <h5 class="mb-3 text-uppercase bg-light p-2"><i class="mdi mdi-account-circle mr-1"></i> Personal Info</h5>

                                   <div class="row">
                                        <div class="col-md-6">
                                             @Html.LabelFor(m => m.FirstName, "First Name", new { @for = "validationCustom01" })
                                             @Html.TextBoxFor(m => m.FirstName, new
                                        {
                                             type = "text",
                                             @class = "form-control",
                                             id = "validationCustom01",
                                             placeholder = "Enter your first name",
                                             required = true,
                                             title = "First Name",
                                        })
                                        </div>

                                        <div class="col-md-6">
                                             @Html.LabelFor(m => m.LastName, "Last Name", new { @for = "validationCustom02" })
                                             @Html.TextBoxFor(m => m.LastName, new
                                        {
                                             type = "text",
                                             @class = "form-control",
                                             id = "validationCustom02",
                                             placeholder = "Enter your last name",
                                             required = true,
                                             title = "Last Name",
                                        })
                                        </div>
                                   </div>
                                   <div class="row">
                                        <div class="col-md-6">
                                             @Html.LabelFor(m => m.Email, "Email", new { @for = "validationCustom03" })
                                             @Html.TextBoxFor(m => m.Email, new
                                        {
                                             type = "email",
                                             @class = "form-control",
                                             id = "validationCustom03",
                                             placeholder = "Enter your email",
                                             required = true,
                                             title = "Email",
                                             @readonly = "readonly"
                                        })
                                        </div>

                                        <div class="col-md-6">
                                             @Html.LabelFor(m => m.Phone, "Phone", new { @for = "validationCustom04" })
                                             @Html.TextBoxFor(m => m.Phone, new
                                        {
                                             type = "number",
                                             @class = "form-control",
                                             id = "validationCustom04",
                                             placeholder = "Enter your phone",
                                             required = true,
                                             title = "Phone",
                                        })
                                        </div>
                                   </div>
                                   <div class="row">
                                        <div class="col-md-6">
                                             @Html.LabelFor(m => m.BirthDate, "Birth Date", new { @for = "validationCustom05" })
                                             @Html.TextBoxFor(m => m.BirthDate, "{0:yyyy-MM-dd}", new
                                        {
                                             type = "date",
                                             @class = "form-control",
                                             id = "validationCustom05",
                                             placeholder = "Enter your birth date",
                                             required = true,
                                             title = "Birth Date",
                                        })
                                        </div>
                                        <div class="col-md-6">
                                             @Html.LabelFor(m => m.Address, "Address", new { @for = "validationCustom06" })
                                             @Html.TextBoxFor(m => m.Address, new
                                        {
                                             type = "text",
                                             @class = "form-control",
                                             id = "validationCustom06",
                                             placeholder = "Enter your address",
                                             required = true,
                                             title = "Address",
                                        })
                                        </div>
                                   </div>
                                   <div class="row">

                                        <div class="col-md-6">
                                             @Html.Label("Profile Picture", new { @for = "imageFile" })
                                             <input type="file" id="imageFile" name="imageFile" accept="image/png" class="form-control" />
                                        </div>
                                        <div class="col-md-6">
                                             @Html.Label(" ", new { @for = "validationCustom08" })
                                             <button class="form-control btn btn-primary" href="#" type="submit">Edit User</button>
                                        </div>
                                   </div>

                                   <h5 class="mb-3 text-uppercase bg-light p-2"><i class="mdi mdi-earth mr-1"></i> Flights</h5>
                                   <div class="table-responsive">
                                        <table class="table table-borderless mb-0">
                                             <thead class="thead-light">
                                                  <tr>
                                                       <th>#</th>
                                                       <th>Start Loc.</th>
                                                       <th>End Loc.</th>
                                                       <th>Start Time</th>
                                                       <th>End Time</th>
                                                       <th>Status</th>
                                                       <th>Company</th>
                                                  </tr>
                                             </thead>
                                             <tbody>
                                                  <tr>
                                                       <td>1</td>
                                                       <td>Chişinău</td>
                                                       <td>Budapest</td>
                                                       <td>15:25 04/23/2024</td>
                                                       <td>16:00 04/23/2024</td>
                                                       <td><span class="badge badge-pink">Done</span></td>
                                                       <td>Wizz Air Hungary</td>
                                                  </tr>
                                             </tbody>
                                        </table>
                                   </div>
                              </form>
                         }
                    </div>
               </div>
          </div>
     </div>
</div>