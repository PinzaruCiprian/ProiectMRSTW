<div class="row justify-content-center">
     <div class="col-lg-10">
          <div class="card-box">
               <h4 class="font-24">Companies</h4>
               <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">

                         <div class="carousel-item active mt-3">
                              <div class="row justify-content-center">
                                   @foreach (var company in randomCompaniesList)
                                   {
                                        <div class="col-2 text-center">
                                             <a href="@Url.Action("FlightData", "Home", new { name = company.Name })">
                                                  <img class="avatar-xl rounded-circle" src="@Url.Content("~/assets/images/companies/" + company.Name + ".png")">
                                             </a>
                                             <h6 class="font-13">@company.Name</h6>
                                        </div>
                                   }
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
