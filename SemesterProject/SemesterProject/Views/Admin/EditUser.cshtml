@{
     ViewBag.Title = "EditUser";
     var userToEdit = ViewBag.user;
}
@model SemesterProject.Model.EditUser

<div class="row">
     <div class="col-lg-12">
          <div class="card">
               <div class="card-body">
                    <h4 class="header-title">Edit an Existing User</h4>
                    <p class="sub-header">Here you can edit an existing user.</p>

                    @Html.ValidationSummary(true)
                    @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { @id = "EditUserForm" }))
                    {
                         @Html.AntiForgeryToken()
                         <form class="needs-validation" novalidate>
                              <div class="row">
                                   <div class="form-group col-lg-4">
                                        @Html.LabelFor(m => m.FirstName, "First Name", new { @for = "validationCustom01" })
                                        @Html.TextBoxFor(m => m.FirstName, new
                                   {
                                        type = "text",
                                        @class = "form-control",
                                        id = "validationCustom01",
                                        placeholder = "First Name",
                                        required = true,
                                        title = "First Name",
                                   })
                                   </div>
                                   <div class="form-group col-lg-4">
                                        @Html.LabelFor(m => m.LastName, "Last Name", new { @for = "validationCustom02" })
                                        @Html.TextBoxFor(m => m.LastName, new
                                   {
                                        type = "text",
                                        @class = "form-control",
                                        id = "validationCustom02",
                                        placeholder = "Last Name",
                                        required = true,
                                        title = "Last Name",
                                   })
                                   </div>
                                   <div class="form-group col-lg-4">
                                        @Html.LabelFor(m => m.Username, "Username", new { @for = "validationCustomUsername" })
                                        <div class="input-group">
                                             <div class="input-group-prepend">
                                                  <span class="input-group-text" id="inputGroupPrepend">&#64;</span>
                                             </div>
                                             @Html.TextBoxFor(m => m.Username, new
                                        {
                                             type = "text",
                                             @class = "form-control",
                                             id = "validationCustomUsername",
                                             placeholder = "Username",
                                             required = true,
                                             title = "Username",
                                        })
                                        </div>
                                   </div>
                                   <div class="form-group col-lg-4">
                                        @Html.LabelFor(m => m.Email, "Email", new { @for = "validationCustom03" })
                                        @Html.TextBoxFor(m => m.Email, new
                                   {
                                        type = "email",
                                        @class = "form-control",
                                        id = "validationCustom03",
                                        placeholder = "Email",
                                        required = true,
                                        title = "Email",


@readonly = "readonly"
                                   })
                                   </div>
                                   <div class="form-group col-lg-4">
                                        @Html.LabelFor(m => m.Address, "Address", new { @for = "validationCustom04" })
                                        @Html.TextBoxFor(m => m.Address, new
                                   {
                                        type = "text",
                                        @class = "form-control",
                                        id = "validationCustom04",
                                        placeholder = "Address",
                                        required = true,
                                        title = "Address",
                                   })
                                   </div>
                                   <div class="form-group col-lg-4">
                                        @Html.LabelFor(m => m.Phone, "Phone", new { @for = "validationCustom05" })
                                        @Html.TextBoxFor(m => m.Phone, new
                                   {
                                        type = "number",
                                        @class = "form-control",
                                        id = "validationCustom05",
                                        placeholder = "Phone",
                                        required = true,
                                        title = "Phone",
                                   })
                                   </div>
                                   <div class="form-group col-lg-4">
                                        @Html.LabelFor(m => m.Level, "Role", new { @for = "validationCustom06" })
                                        @Html.TextBoxFor(m => m.Level, new
                                   {
                                        type = "number",
                                        @class = "form-control",
                                        id = "validationCustom06",
                                        placeholder = "Role",
                                        required = true,
                                        title = "Role",
                                   })
                                   </div>
                                   <div class="form-group col-lg-4">
                                        @Html.LabelFor(m => m.BirthDate, "Birth Date", new { @for = "validationCustom07" })
                                        @Html.TextBoxFor(m => m.BirthDate, "{0:yyyy-MM-dd}", new
                                   {
                                        type = "date",
                                        @class = "form-control",
                                        id = "validationCustom07",
                                        placeholder = "Birth Date",
                                        required = true,
                                        title = "Birth Date",
                                   })
                                   </div>
                              </div>
                              <button class="btn btn-primary" href="#" type="submit">Edit User</button>
                         </form>
                    }
               </div>
          </div>
     </div>
</div>