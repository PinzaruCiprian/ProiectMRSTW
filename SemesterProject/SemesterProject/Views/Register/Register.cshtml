
@{
     Layout = "~/Views/Shared/_LayoutSimple.cshtml";
     ViewBag.Title = "Register";
}

@model SemesterProject.Model.UserRegister

<div class="account-pages mt-5 mb-5">
     <div class="container">
          <div class="row justify-content-center">
               <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">

                         <div class="card-body p-4">

                              <div class="text-center w-75 m-auto">
                                   <a href="index.html">
                                        <span><img src="assets/images/logo-dark.png" alt="" height="22"></span>
                                   </a>
                                   <p class="text-muted mb-4 mt-3">Don't have an account? Create your own account, it takes less than a minute</p>
                              </div>
                              @Html.ValidationSummary(true)
                              @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { @id = "RegisterForm" }))
                              {
                                   @Html.AntiForgeryToken()
                                   <form action="/" novalidate id="RegisterForm" method="post">

                                        <div class="form-group">
                                             @Html.LabelFor(m => m.Credential, new { @class = "Credential" })
                                             @Html.TextBoxFor(m => m.Credential, new
                                        {
                                             placeholder = "credential",
                                             title = "Enter your credential",
                                             value = "",
                                             name = "credential",
                                             id = "fullname",
                                             @class = "form-control"
                                        })
                                        </div>
                                        <div class="form-group">
                                             @Html.LabelFor(m => m.Email, new { @class = "emailadress" })
                                             @Html.TextBoxFor(m => m.Email, new
                                        {
                                             placeholder = "example@gmail.com",
                                             title = "Enter your email",
                                             value = "",
                                             name = "email",
                                             id = "emailaddress",
                                             @class = "form-control"
                                        })
                                        </div>
                                        <div class="form-group">
                                             @Html.LabelFor(m => m.Password, new { @class = "password" })
                                             @Html.TextBoxFor(m => m.Password, new
                                        {
                                             placeholder = "password",
                                             title = "Enter your password",
                                             value = "",
                                             name = "password",
                                             id = "password",
                                             @class = "form-control"
                                        })
                                        </div>
                                        <div class="form-group">
                                             <div class="custom-control custom-checkbox">
                                                  <input type="checkbox" class="custom-control-input" id="checkbox-signup">
                                                  <label class="custom-control-label" for="checkbox-signup">I accept <a href="javascript: void(0);" class="text-dark">Terms and Conditions</a></label>
                                             </div>
                                        </div>
                                        <div class="form-group mb-0 text-center">
                                             <button class="btn btn-primary btn-block" type="submit" href="/Home/Index"> Sign Up </button>
                                        </div>

                                   </form>
                              }


                              <div class="text-center">
                                   <h5 class="mt-3 text-muted">Sign up using</h5>
                                   <ul class="social-list list-inline mt-3 mb-0">
                                        <li class="list-inline-item">
                                             <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                             <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                             <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                             <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                                        </li>
                                   </ul>
                              </div>
                         </div>
                    </div>

                    <div class="row mt-3">
                         <div class="col-12 text-center">
                              <p class="text-muted">Already have account?  <a href="/Login/Login" class="text-muted font-weight-medium ml-1">Sign In</a></p>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>